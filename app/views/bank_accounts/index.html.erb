<h1>Listing bank_accounts</h1>

<table>
  <thead>
    <tr>
      <th>Openpay</th>
      <th>Alias</th>
      <th>Holder name</th>
      <th>Clabe</th>
      <th>Bank name</th>
      <th>Bank code</th>
      <th>Creation date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.openpay_id %></td>
        <td><%= bank_account.alias %></td>
        <td><%= bank_account.holder_name %></td>
        <td><%= bank_account.clabe %></td>
        <td><%= bank_account.bank_name %></td>
        <td><%= bank_account.bank_code %></td>
        <td><%= bank_account.creation_date %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

