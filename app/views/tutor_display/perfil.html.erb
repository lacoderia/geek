<div class="perfil_header">
  <h3>Enviar solicitud</h3>
  <div>
    <img src="/assets/site/person.png">
    <span>Mi Agenda</span> | <span>Mi Historial</span>
    <button>Mensajes</button>
    <button>Perfil</button>
  </div>
  <hr>
  <h1>Enviar solicitud</h1>
  <form id="tutor_profile_form">
    <h3>Información personal</h3>
    <div class="tutor_picture">
        <img id="profile_picture" src="/assets/site/person.png">
        <a href="#" class="btn-upload">Cambiar</a>
        <div class="fileupload" style="display: none">
        <label for="picture">Profile picture:</label>
        <input type='file' name="picture" id="picture" enctype="multipart/form-data" runat="server" />
        </div>
    </div>
    <div class="tutor_name">
      <div><input type="text" placeholder="Nombre" class="required" name="tutor_name"/></div>
      <div><input type="text" placeholder="Apellido" class="required" name="tutor_last_name"/></div>
    </div>
    <h3>Datos académicos</h3>
    <textarea placeholder="Formación" name="tutor_studies" class="required"></textarea>
    <textarea placeholder="Referencias" name="tutor_references" class="required"></textarea>
    <h4>Temas</h4>
    <select ng-model="selectedCategory" ng-options="category.name for category in categories" />
    <input type="text" placeholder="Tema" ng-model="selectedTopic" name="tutor_topic">
    <button ng-click="addTutorTopic()">Añadir</button>
    <div id="tutor_topics">
        <div id="tutor_topic_{{$index}}" ng-repeat="tutorTopic in tutorTopics">{{tutorTopic.name}} <div ng-click="removeTutorTopic($index)">X</div></div>
    </div>
  </form>
  <button ng-click="submitTutorRequest()">Enviar solicitud</button>
</div>