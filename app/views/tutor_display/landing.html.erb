<header class="container">
  <div class="row navbar">
    <h1 class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
      <a href="#" title="Geek">
        <img src="/assets/site/geek-logo.png" class="hidden-xs">
        <span class="hidden-lg hidden-md hidden-sm">geek</span>
      </a>
    </h1>
    <nav class="navigation col-lg-10 col-md-10 col-sm-12 col-xs-12" role="navigation" ng-controller="NavigationController as navigationCtrl">
      <%= render 'layouts/tutor_display/navigation_home' %>
    </nav>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="bgcolor-light-gray section-search">
        <img src="/assets/site/geek.png" alt="Geek" class="search-image hidden-xs">
        <div>
          <h2 class="hidden-xs">geek</h2>
          <div class="section-how-it-works">
            <ul>
              <li><span class="number">1</span>Busca a tu tutor</li>
              <li><span class="number">2</span>Agenda una cita</li>
              <li><span class="number">3</span>Pasa tu examen de Álgebra</li>
