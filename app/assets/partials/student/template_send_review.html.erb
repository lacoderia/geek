<div ng-class="[DEFAULT_CLASS, detailArrowClass]" ng-style="modalStyle" ng-show="selectedTutor">
  <span us-spinner spinner-key="review-modal-spinner"></span>

  <span class="icon-close modal-detail-close" ng-click="closeReviewModal()"></span>
  <div class="modal-detail-header" translate="POPUP_REVIEW_TITLE"></div>
  <div class="modal-detail-content">
    <div>
      <label style="font-weight: normal" translate="POPUP_REVIEW_TEXT"></label><br/>
    </div>

    <table class="score-table">
      <tr>
        <td>
          <span class="icon-help icon-pointer" data-placement="top-left" data-content="{{ 'POPUP_REVIEW_KNOWLEDGE_HELP' | translate }}" data-trigger="click" html="true" bs-popover ></span> <span translate="POPUP_REVIEW_KNOWLEDGE"></span>
        </td>
        <td>
          <div class="score">
            <span class="icon-star1 pointer" ng-click="selectReviewScore('knowledge', 1)" ng-class="tutorReview.knowledge >= 1 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('knowledge', 2)" ng-class="tutorReview.knowledge >= 2 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('knowledge', 3)" ng-class="tutorReview.knowledge >= 3 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('knowledge', 4)" ng-class="tutorReview.knowledge >= 4 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('knowledge', 5)" ng-class="tutorReview.knowledge >= 5 ? 'star-full': 'star-empty'"></span>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <span class="icon-help icon-pointer" data-placement="top-left" data-content="{{ 'POPUP_REVIEW_COMMUNICATION_HELP' | translate }}" data-trigger="click" html="true" bs-popover ></span> <span translate="POPUP_REVIEW_COMMUNICATION"></span>
        </td>
        <td>
          <div class="score">
            <span class="icon-star1 pointer" ng-click="selectReviewScore('communication', 1)" ng-class="tutorReview.communication >= 1 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('communication', 2)" ng-class="tutorReview.communication >= 2 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('communication', 3)" ng-class="tutorReview.communication >= 3 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('communication', 4)" ng-class="tutorReview.communication >= 4 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('communication', 5)" ng-class="tutorReview.communication >= 5 ? 'star-full': 'star-empty'"></span>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <span class="icon-help icon-pointer" data-placement="top-left" data-content="{{ 'POPUP_REVIEW_PRESENTATION_HELP' | translate }}" data-trigger="click" html="true" bs-popover ></span> <span translate="POPUP_REVIEW_PRESENTATION"></span>
        </td>
        <td>
          <div class="score">
            <span class="icon-star1 pointer" ng-click="selectReviewScore('presentation', 1)" ng-class="tutorReview.presentation >= 1 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('presentation', 2)" ng-class="tutorReview.presentation >= 2 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('presentation', 3)" ng-class="tutorReview.presentation >= 3 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('presentation', 4)" ng-class="tutorReview.presentation >= 4 ? 'star-full': 'star-empty'"></span>
            <span class="icon-star1 pointer" ng-click="selectReviewScore('presentation', 5)" ng-class="tutorReview.presentation >= 5 ? 'star-full': 'star-empty'"></span>
          </div>
        </td>
      </tr>
    </table>

    <br/>
      <label style="font-weight: normal" translate="POPUP_REVIEW_COMMENT"></label><br/>
      <textarea  class="form-textarea form-control" rows="4" ng-model="tutorReview.comment" required></textarea>
    <br/>
    <div style="text-align: center;">
      <a class="action-button action-button-medium-gray" ng-click="sendReview(selectedTutor, tutorReview)" translate="POPUP_REVIEW_SEND"></a>
    </div>
  </div>
  <div class="modal-detail-footer"></div>
</div>
