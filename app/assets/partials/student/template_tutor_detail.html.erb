<div class="modal-container" ng-show="toggle" >
  <div id="tutor-detail" class="search-result-list calendar">
    <span class="icon-close-big" ng-click="closeTutorDetailModal()"></span>
    <div class="tutor">
      <div class="tutor-image">
        <img src="/assets/site/cat-artes.png">
        <div class="clearfix"></div>
      </div>
      <div class="tutor-personal-info">
        <div class="content">
          <h4 class="tutor-name">María Alvarado Ruíz</h4>
          <h5 class="tutor-county">Condesa</h5>
          <p class="resume">
            The path of the righteous man is beset on all sides by the iniquities of the selfish and the tyranny of evil men.
          </p>
        </div>
      </div>
      <div class="tutor-class-info">
        <div class="content">
          <div class="content-score">
            <div class="score">
              <span class="icon-star1"></span>
              <span class="icon-star1"></span>
              <span class="icon-star1"></span>
              <span class="icon-star1"></span>
              <span class="icon-star1"></span>
            </div>
          </div>
          <div class="content-price">
            <h4 class="price">
              $ 300.00 MXN <br>
              Por hora
            </h4>
          </div>
          <div class="content-button">
            <button class="action-button send-message" ng-click="showTutorDetails(tutor)">Ver perfil</button>
          </div>
        </div>
      </div>
    </div>

    <div class="week-view tutor-calendar-section">
      <div class="week-row">
        <table>
          <tbody>
          <tr>
            <td class="week-day-title"></td>
            <td class="week-day-title" ng-repeat="day in DAYS">
              <span class="hidden-sm hidden-xs">{{ day.title }}</span>
              <span class="hidden-md hidden-lg">{{ day.minTitle }}</span>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
      <div class="week-row" ng-repeat="row in weekRows">
        <table>
          <tbody>
          <tr>
            <td class="week-day">{{ HOURS[$index] }}</td>
            <td class="week-day" ng-class="[halfHour.appointment.appointmentStatusClass, {true:'available', false: 'unavailable'}[halfHour.available]]" ng-repeat="halfHour in row.halfHours" ng-click="showAppointmentDetail($event,halfHour.appointment)">
            a
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>