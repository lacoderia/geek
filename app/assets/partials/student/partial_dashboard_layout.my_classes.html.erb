<div class="student-classes-container">
  <h2 class="section-title">Mis Clases</h2>
  <div class="appointment-history" ng-controller="MyAppointmentsController as MyAppointmentsCtrl">
    <div class="history-list-view-unavailable" ng-hide="appointmentsGroups.length">
      <div class="history-list-view-unavailable-content">
        <h3>No tienes citas agendadas</h3>
      </div>
    </div>
    <div class="history-list-view-row" ng-show="appointmentsGroups.length">
      <table>
        <thead>
        <tr class="history-list-title-row">
          <th class="info-title">Horario</th>
          <th class="info-title">Tutor</th>
          <th class="info-title">Materia</th>
          <th class="info-title">Estatus</th>
          <th class="info-title">Acciones</th>
        </tr>
        </thead>
      </table>
      <table ng-repeat="appointmentGroup in appointmentsGroups" class="week-list-day-row" ng-show="appointmentGroup.appointments.length">
        <thead>
        <tr class="history-list-day-title-row">
          <td class="hidden-sm hidden-xs day-title" colspan="6">{{ DAYS[appointmentGroup.day].title }}, {{ appointmentGroup.numberDay }} de {{ MONTHS[appointmentGroup.month] }}</td>
          <td class="hidden-md hidden-lg day-title" colspan="6">{{ DAYS[appointmentGroup.day].minTitle }}, {{ appointmentGroup.numberDay }}</td>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="appointment in appointmentGroup.appointments" class="history-list-day-info-row" ng-click="showAppointmentDetail($event, appointment)">
          <td class="day-info">De {{ appointment.startHour }} a {{ appointment.endHour }}</td>
          <td class="day-info">{{ appointment.tutor.first_name }} {{ appointment.tutor.last_name }}</td>
          <td class="day-info">{{ appointment.subject }}</td>
          <td class="day-info"><span ng-class="[appointment.status.class,appointment.status.icon_class]"> {{ appointment.status.name }}</span></td>
          <td class="day-info">
            <div class="appointment-button">
              <a ng-repeat="button in appointment.buttons" ng-class="button.class" title="button.title" ng-click="changeAppointmentStatus($event, button.action, appointment)">{{ button.text }}</a>
            </div>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
