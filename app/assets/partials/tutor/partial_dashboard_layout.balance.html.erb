<div class="balance" ng-controller="BalanceController">
  <h2 class="section-title">{{ 'BALANCE_TITLE' | translate}}</h2>
  <ng-alert id="tutor-request-form" alert-params="tutorBalanceAlertParams"></ng-alert>

  <!-- Ãšltimas citas no confirmadas -->
  <div class="balance-group">
    <div class="balance-items-group">
      <div class="current-balance-info">
        <h4 class="current-balance">{{ 'BALANCE_LABEL_CURRENT_BALANCE' | translate }}: {{ tutor.balanceInfo.balance | currency }}</h4>
        <div ng-if="tutor.balanceInfo.card">
          <p class="card-info" ng-if="!tutor.balanceInfo.card.is_bank_account">{{ 'BALANCE_LABEL_CURRENT_ACCOUNT' | translate }}: XXXX-XXXX-XXXX-{{ tutor.balanceInfo.card.card_number }}</p>
          <p class="card-info" ng-if="tutor.balanceInfo.card.is_bank_account">{{ 'BALANCE_LABEL_CURRENT_ACCOUNT' | translate }}: XXXXXXXXXXXXXX{{ tutor.balanceInfo.card.card_number }}</p>
          <div class="balance-buttons-container">
            <a class="action-button action-button-light-green" title="{{ 'BALANCE_LABEL_TRANSFER_MONEY' | translate }}" ng-click="transferMoney()"><span class="icon-coin-dollar"></span> {{ 'BALANCE_LABEL_TRANSFER_MONEY' | translate }}</a>
          </div>
        </div>
        <div class="unavailable-resume-items-message" ng-hide="tutor.balanceInfo.card">
            <p>{{ 'UNAVAILABLE_MESSAGE_COLLECT_NO_METHODS_TUTOR' | translate }}</p>
        </div>
      </div>
    </div>

    <div class="resume-group-actions" ng-if="resume.requests.latest.length">
      <div class="resume-total-info"><span translate="TOTAL"></span>: {{ resume.requests.total }}</div>
      <div class="resume-actions">
        <a class="link" ui-sref="dashboard.calendar" translate="RESUME_SHOW_ALL_REQUESTS_BUTTON"></a>
      </div>
    </div>

  </div>

</div>