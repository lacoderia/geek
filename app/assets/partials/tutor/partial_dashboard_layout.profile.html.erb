<div class="tutor-request-container" ng-show="tutor.requestStatus == DEFAULT_VALUES.PROFILE_STATUS.NO_REQUEST">
  <h2 class="section-title">Enviar solicitud</h2>
  <form name="tutorRequestForm" id="tutor_request_form" class="dashboard-form validation-form">
    <fieldset>
      <legend>Información personal</legend>
      <div class="tutor_picture">
        <div class="profile_picture">
          <img id="profile_picture" src="/assets/site/person.png">
          <div class="action-button-upload" ng-click="openImageSelector($event)">CAMBIAR FOTO</div>
          <div class="fileupload" style="display: none">
            <input type='file' name="picture" enctype="multipart/form-data" runat="server" />
          </div>
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
          <label>Nombre:</label>
        </div>
        <div class="right">
          <input type="text" name="tutor_name" ng-model="tutorRequest.name" class="form-input form-control" placeholder="NOMBRE" required/>
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
            <label>Apellido:</label>
        </div>
        <div class="right">
          <input type="text" name="tutor_last_name" ng-model="tutorRequest.lastname" class="form-input form-control" placeholder="APELLIDO" class="form-input form-control" required/>
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
            <label>Teléfono:</label>
        </div>
        <div class="right">
          <input type="text" name="tutor_phone" ng-model="tutorRequest.phone" class="form-input form-control" placeholder="TELÉFONO" class="form-input form-control" required/>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <legend>Información académica</legend>
      <div class="form-group" show-errors>
        <div class="left">
          <label>Formación:</label>
        </div>
        <div class="right">
          <textarea name="tutor_studies" ng-model="tutorRequest.studies" class="form-textarea form-control" placeholder="FORMACIÓN" required></textarea>
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
          <label>Referencias:</label>
        </div>
        <div class="right">
          <textarea name="tutor_references" ng-model="tutorRequest.references" class="form-textarea form-control" placeholder="REFERENCIAS" required></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="left">
          <label>Temas:</label>
        </div>
        <div class="right">
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
              {{selectedCategory.name}}
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
              <li role="presentation"><a role="menuitem" tabindex="{{$index}}" ng-repeat="category in categories" ng-click="selectCategory(category)">{{ category.name }}</a></li>
            </ul>
          </div>
          <input type="text" placeholder="Tema" ng-model="selectedTopic" name="tutor_topic" class="form-input-half form-control">
          <a class="action-button action-button-medium-gray" ng-click="addTutorRequestTopic()">Añadir</a>
          <div id="tutor_topics" class="items-added-group">
            <div id="tutor_request_topic_{{$index}}" ng-repeat="tutorRequestTopic in tutorRequest.topics" class="item-added">{{tutorRequestTopic.name}} <span ng-click="removeTutorRequestTopic($index)" class="icon-close close-item"></span></div>
          </div>
        </div>
      </div>
    </fieldset>
    <div class="send-form">
      <a class="action-button action-button-light-green" ng-click="submitTutorRequest()">Enviar solicitud</a>
    </div>
  </form>
</div>
<div class="tutor-request-container" ng-show="tutor.requestStatus == DEFAULT_VALUES.PROFILE_STATUS.REQUEST_SENT">
  <h2>Solicitud enviada</h2>
  <div>
    Para poder ver tu perfil tu solicitud de tutor debe ser aceptada.
  </div>
</div>
<div class="tutor-request-container" ng-show="tutor.requestStatus == DEFAULT_VALUES.PROFILE_STATUS.REQUEST_ACCEPTED">
  <h2>Mi perfil</h2>
  <form name="tutorProfileForm" id="tutor_profile_form" class="dashboard-form validation-form">
    <fieldset>
      <legend>Información personal</legend>
      <div class="tutor_picture">
        <div class="profile_picture">
          <img id="profile_picture" src="/assets/site/person.png">
          <a class="btn-upload">CAMBIAR FOTO</a>
        </div>
        <div class="fileupload" style="display: none">
          <input type='file' name="picture" id="picture" enctype="multipart/form-data" runat="server" />
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
          <label>Nombre:</label>
        </div>
        <div class="right">
          <input type="text" name="tutor_name" ng-model="tutor.name" class="form-input form-control" placeholder="NOMBRE" required/>
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
          <label>Apellido:</label>
        </div>
        <div class="right">
          <input type="text" name="tutor_last_name" ng-model="tutor.lastname" class="form-input form-control" placeholder="APELLIDO" class="form-input form-control" required/>
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
          <label>Teléfono:</label>
        </div>
        <div class="right">
          <input type="text" name="tutor_phone" ng-model="tutor.phone" class="form-input form-control" placeholder="TELÉFONO" class="form-input form-control" required/>
        </div>
      </div>
      <div class="form-group" show-errors>
        <div class="left">
          <label>Sexo:</label>
        </div>
        <div class="right form-radio custom-radio">
          <input type="radio" id="tutor_gender_h" name="tutor_gender" ng-model="tutor.gender" class="form-control" required>
          <label for="tutor_gender_h">Hombre</label>
          <input type="radio" id="tutor_gender_m" name="tutor_gender" ng-model="tutor.gender" class="form-control" required>
          <label for="tutor_gender_m">Mujer</label>
        </div>
      </div>
    </fieldset>
    <div class="form-group" show-errors>
      <div class="left">
        <label>Formación:</label>
      </div>
      <div class="right">
        <textarea name="tutor_studies" ng-model="tutor.studies" class="form-textarea form-control" placeholder="FORMACIÓN" required></textarea>
      </div>
    </div>
    <div class="form-group" show-errors>
      <div class="left">
        <label>Referencias:</label>
      </div>
      <div class="right">
        <textarea name="tutor_references" ng-model="tutor.references" class="form-textarea form-control" placeholder="REFERENCIAS" required></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="left">
        <label>Temas:</label>
      </div>
      <div class="right">
        <select ng-model="selectedCategory" ng-options="category.name for category in categories" />
        <input type="text" placeholder="Tema" ng-model="selectedTopic" name="tutor_topic" class="form-input-half form-control">
        <button class="action-button action-button-medium-gray" ng-click="addTutorTopic()">Añadir</button>
        <div id="tutor_topics">
          <div id="tutor_topic_{{$index}}" ng-repeat="tutorTopic in tutorTopics">{{tutorTopic.name}} <div ng-click="removeTutorTopic($index)">X</div></div>
        </div>
      </div>
    </div>
    <div class="send-form">
      <a class="action-button action-button-light-green" ng-click="submitTutorProfile()">Enviar solicitud</a>
    </div>
  </form>
</div>