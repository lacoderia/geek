  <div class="container">
    <div class="row">
      <div class="col-xs-12 hidden-lg hidden-md hidden-sm language">
        <a href="#" title="¿Quieres dar clases en geek?" class="text-color-light-blue">English/Español</a>
      </div>
      <div class="col-lg-6 col-md-3 social-icons columns uppercase">
        <p translate="FOOTER_SOCIAL"></p>
        <ul>
          <li><a href="" title="Twitter"><span class="icon-twitter text-color-light-blue"></span></a></li>
          <li><a href="" title="Facebook"><span class="icon-facebook3 text-color-light-green"></span></a></li>
          <li><a href="" title="LinkedIn"><span class="icon-linkedin text-color-light-orange"></span></a></li>
        </ul>
      </div>
      <div class="col-lg-6 col-md-3 columns links">
        <div class="col-lg-6 col-md-6 columns uppercase">
          <ul>
            <li translate="FOOTER_WE"></li>
            <li translate="FOOTER_CONTACT"></li>
            <li translate="FOOTER_HELP"></li>
          </ul>
        </div>
        <div class="col-lg-6 col-md-6 columns right uppercase">
          <ul>
            <li translate="FOOTER_FAQ"></li>
            <li translate="FOOTER_BLOG"></li>
