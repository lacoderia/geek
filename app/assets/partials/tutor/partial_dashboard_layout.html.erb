<header class="container">
  <div class="row navbar">
    <h1 class="col-lg-2 col-md-2 col-sm-3 col-xs-12">
      <a href="#" title="Geek">
        <img src="/assets/site/geek-logo.png" class="hidden-xs">
        <span class="hidden-lg hidden-md hidden-sm">geek</span>
      </a>
    </h1>
    <nav class="navigation col-lg-10 col-md-10 col-sm-9 col-xs-12" role="navigation" ng-controller="NavigationController as navigationCtrl">
      <ul>
        <li ng-show="tutor.request.approved">
          <span class="messages-alert" ng-show="newConversationMessages">{{ newConversationMessages }}</span>
          <a ui-sref=".messages" title="Mensajes" class="text-color-dark-blue" translate="{{ 'MESSAGES' }}"></a>
        </li>
        <li class="dropdown"><a title="Perfil" class="dropdown-toggle" data-toggle="dropdown" type="button"><span ng-bind="userName"></span> <span class="caret"></span>
        </a>
          <ul class="dropdown-menu" role="menu">
            <li role="presentation" ui-sref=".profile"><a role="menuitem"><span class="icon-user"></span> {{'PROFILE' | translate}}</a></li>
            <li role="presentation" ui-sref=".payment-options"><a role="menuitem" translate="PAYMENT_OPTIONS"></a></li>
            <li><a title="{{ 'CHOOSE_LANGUAGE' | translate }}" ng-click="toggleLanguage()" translate="CHOOSE_LANGUAGE"></a></li>
            <li role="presentation"><a role="menuitem" href="/logout" translate="SIGN_OUT"></a></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>

<div class="container" ng-show="tutor.request.approved">
  <div class="row">
    <ul class="menu-tabs col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <li><a ui-sref=".resume" title="{{ 'DASHBOARD_TITLE' | translate }}" translate="DASHBOARD_TITLE"></a></li>
      <li><a ui-sref=".calendar" title="{{ 'MY_CALENDAR' | translate }}" translate="MY_CALENDAR"></a></li>
      <li><a ui-sref=".history" title="{{ 'MY_HISTORY' | translate }}" translate="MY_HISTORY"></a></li>
      <li><a ui-sref=".reviews" title="{{ 'MY_REVIEWS' | translate }}" translate="MY_REVIEWS"></a></li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 section-dashboard-container">
      <div ui-view></div>
    </div>
  </div>
</div>

