<div ng-class="[DEFAULT_CLASS, detailArrowClass]" ng-style="modalStyle" ng-show="selectedAppointmentMessage">
  <span class="icon-close modal-detail-close" ng-click="closeMessage()"></span>
  <div class="modal-detail-header" translate="POPUP_MESSAGE_SEND"></div>
  <div class="modal-detail-content">
    <ng-alert-message alert-params="messageAlertMessagesParams"></ng-alert-message>
    <textarea class="form-textarea form-control" rows="4" placeholder="{{ 'SEND_MESSAGE_TO' | translate }}{{ selectedAppointmentMessage.student.first_name }} {{ selectedAppointmentMessage.student.last_name }}" ng-model="message" required></textarea>
    <a class="action-button action-send-message" ng-click="sendMessage(selectedAppointmentMessage, message)" translate="POPUP_MESSAGE_SEND"></a>
  </div>
  <div class="modal-detail-footer"></div>
  <span us-spinner spinner-key="send-message-spinner"></span>
</div>